<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="200.0" maxWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.inginf.lsdb.group15.forktalk.forktalkapp.controller.BookARestaurantController">
    <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
              <AnchorPane maxHeight="200.0" maxWidth="600.0" prefHeight="200.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="600.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="55.0" prefWidth="600.0">
                           <children>
                              <VBox alignment="TOP_CENTER" prefHeight="58.0" prefWidth="600.0">
                                 <children>
                                       <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="172.0" text="Select a date" textFill="#00000080">
                                           <padding>
                                               <Insets left="5.0" />
                                           </padding>
                                    </Label>
                                       <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="172.0">
                                       <VBox.margin>
                                          <Insets top="5.0" />
                                       </VBox.margin></DatePicker>
                                 </children>
                                 <padding>
                                    <Insets top="5.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="55.0" prefWidth="200.0">
                           <children>
                              <VBox alignment="TOP_CENTER" prefHeight="59.0" prefWidth="600.0">
                                 <children>
                                       <Label contentDisplay="CENTER" text="Specify the booking time" textFill="#00000080" />
                                       <TextField fx:id="timeSlotTextField" alignment="CENTER" maxWidth="170.0" prefHeight="25.0" prefWidth="210.0" promptText="HH:mm">
                                       <VBox.margin>
                                          <Insets top="5.0" />
                                       </VBox.margin></TextField>
                                 </children>
                                 <padding>
                                    <Insets top="5.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="55.0" prefWidth="600.0">
                           <children>
                              <VBox alignment="TOP_CENTER" prefHeight="47.0" prefWidth="600.0">
                                 <children>
                                       <Label contentDisplay="CENTER" text="Specify the number of guests" textFill="#00000080" />
                                       <TextField fx:id="numberOfPersonsTextField" alignment="CENTER" maxWidth="165.0" prefHeight="25.0" prefWidth="76.0">
                                       <VBox.margin>
                                          <Insets top="5.0" />
                                       </VBox.margin></TextField>
                                 </children>
                                 <padding>
                                    <Insets top="5.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </HBox>
                           <HBox alignment="CENTER" prefHeight="35.0" prefWidth="600.0" spacing="10">
                           <children>
                                 <Button fx:id="makeReservationButton" maxWidth="160.0" prefHeight="17.0" prefWidth="111.0" style="-fx-background-color: #037b41;" text="Make Reservation" textFill="WHITE">
                                     <opaqueInsets>
                                         <Insets />
                                     </opaqueInsets>
                                 </Button>
                           </children>
                           <padding>
                              <Insets top="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children></AnchorPane>
         </children>
      </VBox>
    </center>
    <padding>
        <Insets bottom="0" left="0" right="0" top="0" />
    </padding>
</BorderPane>

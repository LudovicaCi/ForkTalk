<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="it.unipi.inginf.lsdb.group15.forktalk.forktalkapp.controller.SignUpPageUserController" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <VBox spacing="20" alignment="CENTER">
        <Label text="Sign Up" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />

        <Button fx:id="signUpButton" text="Sign Up" />

        <Button fx:id="backButton" text="Back"  />
    </VBox>
</StackPane>

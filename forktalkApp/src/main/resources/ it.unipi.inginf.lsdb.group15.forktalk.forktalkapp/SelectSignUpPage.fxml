<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.text.Text?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="it.unipi.inginf.lsdb.group15.forktalk.forktalkapp.controller.SelectSignUpPageController" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <VBox spacing="20" alignment="CENTER">
        <HBox alignment="TOP_LEFT">
            <Button fx:id="backButton" text="Back" style="-fx-background-color: transparent; -fx-text-fill: #037B41;" />
        </HBox>

        <Label text="Choose your role: Restaurant or Food Lover?" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <Text text="Discover, share, and delight your taste buds together with us in the community!" />

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="userButton" text="User" style="-fx-background-color: #037B41; -fx-text-fill: #FFFFFF;" />
            <Button fx:id="restaurantButton" text="Restaurant" style="-fx-background-color: #037B41; -fx-text-fill: #FFFFFF;" />
        </HBox>
    </VBox>
</StackPane>
